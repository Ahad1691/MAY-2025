#include <iostream>
using namespace std;

void printarray( int arr[] , int size ) {
    cout << "printing the array : " <<   endl;

    for( int i=0 ; i<size ; i++ ) {

        cout << arr[i] << " " ; 
         
    }
    cout << "PRINTING DONE " << endl;
}

int main () {

    int first[15] = { 3, 4 , 5 };

    int n = 15;
    printarray( first , 15);

    int second[20] = { 2,4,0,5,3,2,4,6,};

    int m = 20 ;

    printarray(second , 20 );

    int third[5] = {1};

    int q = 5;

    printarray (third , 5 ) ;
}
